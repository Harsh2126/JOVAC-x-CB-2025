<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History - E-Commerce</title>
    <link rel="stylesheet" href="/css/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
    <nav class="navbar">
        <div class="nav-container">
            <div class="nav-logo">
                <a href="/">
                    <i class="fas fa-shopping-cart"></i>
                    <span>E-Commerce</span>
                </a>
            </div>
            <div class="nav-menu">
                <a href="/dashboard" class="nav-link">Dashboard</a>
                <a href="/shop" class="nav-link">
                    <i class="fas fa-store"></i>
                    Shop
                </a>
                <a href="/wishlist" class="nav-link">
                    <i class="fas fa-heart"></i>
                    Wishlist
                </a>
                <span class="welcome-text">Welcome, <%= user.name %></span>
                <a href="/auth/logout" class="nav-link logout-btn">
                    <i class="fas fa-sign-out-alt"></i>
                    Logout
                </a>
            </div>
        </div>
    </nav>

    <main class="orders-container">
        <div class="orders-header">
            <h1><i class="fas fa-shopping-bag"></i> Order History</h1>
            <p>Track your orders and view order history</p>
        </div>

        <div class="orders-content">
            <div class="orders-stats">
                <div class="stat-card">
                    <i class="fas fa-shopping-bag"></i>
                    <div class="stat-info">
                        <h3>Total Orders</h3>
                        <p>5 orders</p>
                    </div>
                </div>
                <div class="stat-card">
                    <i class="fas fa-dollar-sign"></i>
                    <div class="stat-info">
                        <h3>Total Spent</h3>
                        <p>$2,847.95</p>
                    </div>
                </div>
                <div class="stat-card">
                    <i class="fas fa-star"></i>
                    <div class="stat-info">
                        <h3>Average Rating</h3>
                        <p>4.8/5</p>
                    </div>
                </div>
            </div>

            <div class="orders-filters">
                <div class="filter-buttons">
                    <button class="filter-btn active" data-status="all">All Orders</button>
                    <button class="filter-btn" data-status="pending">Pending</button>
                    <button class="filter-btn" data-status="processing">Processing</button>
                    <button class="filter-btn" data-status="shipped">Shipped</button>
                    <button class="filter-btn" data-status="delivered">Delivered</button>
                    <button class="filter-btn" data-status="cancelled">Cancelled</button>
                </div>
            </div>

            <div class="orders-list">
                <!-- Order 1 - Delivered -->
                <div class="order-card" data-status="delivered">
                    <div class="order-header">
                        <div class="order-info">
                            <h3>Order #ORD-2024-001</h3>
                            <p class="order-date">Placed on: January 15, 2024</p>
                            <p class="order-total">Total: $699.99</p>
                        </div>
                        <div class="order-status delivered">
                            <i class="fas fa-check-circle"></i>
                            <span>Delivered</span>
                        </div>
                    </div>
                    <div class="order-items">
                        <div class="order-item">
                            <img src="https://images.unsplash.com/photo-1511707171634-5f897ff02aa9?w=80&h=80&fit=crop&crop=center" alt="Premium Smartphone">
                            <div class="item-details">
                                <h4>Premium Smartphone</h4>
                                <p>Quantity: 1</p>
                                <p class="item-price">$699.99</p>
                            </div>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-secondary">
                            <i class="fas fa-eye"></i>
                            View Details
                        </button>
                        <button class="btn btn-primary">
                            <i class="fas fa-star"></i>
                            Rate Product
                        </button>
                        <button class="btn btn-secondary">
                            <i class="fas fa-redo"></i>
                            Buy Again
                        </button>
                    </div>
                </div>

                <!-- Order 2 - Shipped -->
                <div class="order-card" data-status="shipped">
                    <div class="order-header">
                        <div class="order-info">
                            <h3>Order #ORD-2024-002</h3>
                            <p class="order-date">Placed on: January 20, 2024</p>
                            <p class="order-total">Total: $84.98</p>
                        </div>
                        <div class="order-status shipped">
                            <i class="fas fa-shipping-fast"></i>
                            <span>Shipped</span>
                        </div>
                    </div>
                    <div class="order-items">
                        <div class="order-item">
                            <img src="https://images.unsplash.com/photo-1521572163474-6864f9cf17ab?w=80&h=80&fit=crop&crop=center" alt="Premium Cotton T-Shirt">
                            <div class="item-details">
                                <h4>Premium Cotton T-Shirt</h4>
                                <p>Quantity: 2</p>
                                <p class="item-price">$24.99 each</p>
                            </div>
                        </div>
                        <div class="order-item">
                            <img src="https://images.unsplash.com/photo-1542272604-787c3835535d?w=80&h=80&fit=crop&crop=center" alt="Classic Denim Jeans">
                            <div class="item-details">
                                <h4>Classic Denim Jeans</h4>
                                <p>Quantity: 1</p>
                                <p class="item-price">$59.99</p>
                            </div>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-secondary">
                            <i class="fas fa-eye"></i>
                            View Details
                        </button>
                        <button class="btn btn-primary">
                            <i class="fas fa-truck"></i>
                            Track Package
                        </button>
                    </div>
                </div>

                <!-- Order 3 - Processing -->
                <div class="order-card" data-status="processing">
                    <div class="order-header">
                        <div class="order-info">
                            <h3>Order #ORD-2024-003</h3>
                            <p class="order-date">Placed on: January 25, 2024</p>
                            <p class="order-total">Total: $1,299.99</p>
                        </div>
                        <div class="order-status processing">
                            <i class="fas fa-cog fa-spin"></i>
                            <span>Processing</span>
                        </div>
                    </div>
                    <div class="order-items">
                        <div class="order-item">
                            <img src="https://images.unsplash.com/photo-1496181133206-80ce9b88a853?w=80&h=80&fit=crop&crop=center" alt="Gaming Laptop">
                            <div class="item-details">
                                <h4>Gaming Laptop</h4>
                                <p>Quantity: 1</p>
                                <p class="item-price">$1,299.99</p>
                            </div>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-secondary">
                            <i class="fas fa-eye"></i>
                            View Details
                        </button>
                        <button class="btn btn-danger">
                            <i class="fas fa-times"></i>
                            Cancel Order
                        </button>
                    </div>
                </div>

                <!-- Order 4 - Pending -->
                <div class="order-card" data-status="pending">
                    <div class="order-header">
                        <div class="order-info">
                            <h3>Order #ORD-2024-004</h3>
                            <p class="order-date">Placed on: January 28, 2024</p>
                            <p class="order-total">Total: $54.98</p>
                        </div>
                        <div class="order-status pending">
                            <i class="fas fa-clock"></i>
                            <span>Pending</span>
                        </div>
                    </div>
                    <div class="order-items">
                        <div class="order-item">
                            <img src="https://images.unsplash.com/photo-1544947950-fa07a98d237f?w=80&h=80&fit=crop&crop=center" alt="Bestseller Novel">
                            <div class="item-details">
                                <h4>Bestseller Novel</h4>
                                <p>Quantity: 1</p>
                                <p class="item-price">$14.99</p>
                            </div>
                        </div>
                        <div class="order-item">
                            <img src="https://images.unsplash.com/photo-1466692476868-aef1dfb1e735?w=80&h=80&fit=crop&crop=center" alt="Indoor Plant Set">
                            <div class="item-details">
                                <h4>Indoor Plant Set</h4>
                                <p>Quantity: 1</p>
                                <p class="item-price">$39.99</p>
                            </div>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-secondary">
                            <i class="fas fa-eye"></i>
                            View Details
                        </button>
                        <button class="btn btn-danger">
                            <i class="fas fa-times"></i>
                            Cancel Order
                        </button>
                    </div>
                </div>

                <!-- Order 5 - Cancelled -->
                <div class="order-card" data-status="cancelled">
                    <div class="order-header">
                        <div class="order-info">
                            <h3>Order #ORD-2024-005</h3>
                            <p class="order-date">Placed on: January 10, 2024</p>
                            <p class="order-total">Total: $199.99</p>
                        </div>
                        <div class="order-status cancelled">
                            <i class="fas fa-times-circle"></i>
                            <span>Cancelled</span>
                        </div>
                    </div>
                    <div class="order-items">
                        <div class="order-item">
                            <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?w=80&h=80&fit=crop&crop=center" alt="Wireless Headphones">
                            <div class="item-details">
                                <h4>Wireless Headphones</h4>
                                <p>Quantity: 1</p>
                                <p class="item-price">$199.99</p>
                            </div>
                        </div>
                    </div>
                    <div class="order-actions">
                        <button class="btn btn-secondary">
                            <i class="fas fa-eye"></i>
                            View Details
                        </button>
                        <button class="btn btn-primary">
                            <i class="fas fa-redo"></i>
                            Buy Again
                        </button>
                    </div>
                </div>
            </div>

            <div class="empty-orders" style="display: none;">
                <div class="empty-state">
                    <i class="fas fa-shopping-bag"></i>
                    <h3>No orders yet</h3>
                    <p>Start shopping to see your order history here</p>
                    <a href="/shop" class="btn btn-primary">
                        <i class="fas fa-store"></i>
                        Start Shopping
                    </a>
                </div>
            </div>
        </div>
    </main>

    <script src="/js/orders.js"></script>
</body>
</html> 